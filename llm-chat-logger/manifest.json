{
  "manifest_version": 3,
  "name": "LLM Chat Logger",
  "version": "4.1.1",
  "description": "Claude와 ChatGPT 대화를 마크다운으로 저장 + Artifact 자동 다운로드",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://claude.ai/*",
      "https://chatgpt.com/*",
      "https://chat.openai.com/*"
    ],
    "js": [
      "sites.js",
      "keywords.js",
      "content.js"
    ],
    "run_at": "document_idle"
  }]
}